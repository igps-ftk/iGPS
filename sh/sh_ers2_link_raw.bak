if [ "$1" = "" ]; then
    echo "Usage: sh_envisat_link_raw file"
    exit 1
fi
file=$1


grep '^ ' $file | awk '{print $1}' > .tmp
while read line; do
    echo $line
    dfile="${EOLISA}/${line}.E2"
    if [ ! -s ${dfile} ]; then
	echo "[]ERROR:data not found [${dfile}]!!"
	exit 1
    fi
    echo ln -s $dfile | sh
    if [ $? -eq 0 ]; then
	echo " ${dfile} linked."
    else
	echo "sth maybe wrong! please check."
    fi
done < .tmp
