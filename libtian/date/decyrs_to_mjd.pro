
PRO DECYRS_TO_MJD, DECYRS, MJD=MJD, JD=JD

  IF N_PARAMS() LT 1  THEN BEGIN
    DECYRS = 2007.172603D0
    DECYRS = 2005.172603D0
  ENDIF
  DATE = INTARR(5)
  
  DATE(0) = FIX(DECYRS)
  DATE(1) = 1
  DATE(2) = 1
  DATE(3) = 0
  DATE(4) = 0
  
  SECS    = 0
  YMDHMS_TO_JD, DATE, SECS, JDS
  IF N_PARAMS() LT 1 THEN PRINT, DATE,SECS, JDS, FORMAT='(7F20.4)'
  DATE(0) = DATE(0) + 1
  YMDHMS_TO_JD, DATE, SECS, JDE
  IF N_PARAMS() LT 1 THEN PRINT, DATE,SECS, JDE, FORMAT='(7F20.4)'
  
  JD = JDS + (DECYRS-FIX(DECYRS))*(JDE-JDS)
  MJD = JD - 2400000.5D0
  
  IF N_PARAMS() LT 1 THEN PRINT,MJD,FORMAT='(F20.4)'
  RETURN
END

