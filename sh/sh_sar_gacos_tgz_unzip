# Algorithm:
#   

# Dependency:
#   

path=./tgz

if [ ! -d $path ]; then
  echo -e "[$PROG]\033[1;33;41mERROR\033[0m: no input path ($path)!!"
  exit 1
fi

opath=./ztd

mkdir -p $opath

files=`ls ${path}/20*.tar.gz`
for file in $files; do
  echo tar zxvf $file -C $opath
  echo tar zxvf $file -C $opath | sh
  #exit
done

