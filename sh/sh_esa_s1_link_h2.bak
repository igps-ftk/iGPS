dirs="g5a h1 d1 g5b b1 g5d"
for dir in $dirs; do
  files=`ls /${dir}/esa.data/S1/*.zip`

  for file in $files; do
      sfile="/h2/esa.data/S1/`basename $file`"
      if [ -s $sfile ]; then
        continue
      fi
      ##echo mv $sfile /h2/esa.data/S1/tmp/ |sh
      echo ln -s $file $sfile | sh
      #exit
  done
  
done

exit
