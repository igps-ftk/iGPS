#!/bin/sh

# Name:
#   sh_esa_s1_get_metalink
#   

# Purpose:
#   Get meta data information for S1 files from ASF

# Example:
#   

# Modifications:
#   

# Algorigthm:
#   

# Dependency:
#   

if [ "$esa_data" == "" ]; then
  echo "[]ERROR: environtment variable esa_data NOT set!!"
  exit 1
fi

if [ ! -d $esa_data ]; then
  echo "[]ERROR: directory $esa_data NOT exist!!"
  exit 1
fi

path_in=
while [ "$1" != "" ]; do
    case $1 in 
	-path)
	    path_in=$2
	    ;;
	*)
	    echo "[]ERROR: invalid option $1!!"
	    exit 1
	    ;;
    esac
    shift 2
done

#get files list
if [ "$path_in" == "" ];then
    find ${esa_data}/safe/all/ -maxdepth 1 -name "S1*.manifest.safe" > .s1
    find ${esa_data}/S1/ -maxdepth 1 -name "S1*.zip" >> .s1
    find ${esa_data}/S1.2/ -maxdepth 1 -name "S1*.zip" >> .s1
else
    find $path -maxdepth 1 -name "S1*.zip" > .s1
fi

while read line; do
  fname=`basename $line | awk -F. '{print $1}'`

  URL="https://api.daac.asf.alaska.edu/services/search/param?granule_list=${fname}"
  echo $URL

  ofile=${esa_data}/metalink/${fname}.metalink
  
  if [ -e $ofile ]; then
    echo "[]INFO: already exist ($ofile). Skip it."
    continue
  fi

  curl $URL > $ofile
  #exit
done < .s1

\rm -rf .s1
