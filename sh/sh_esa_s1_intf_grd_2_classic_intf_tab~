path=intf_all
opath=intf_all_classic

#dirs=`ls $path/ | grep _  |grep "201[56]"`
dirs=`cat intf.tab | awk -F\/ '{print $3}'`
for dir in $dirs; do
    echo $dir
    odir="${opath}/${dir}"


    if  [ ! -d $odir ]; 
    echo "mkdir -p $odir	"
    echo "mkdir -p $odir" | sh

    echo "\cp -f ${path}/${dir}/unwrap_mask_ll.png ${odir}/"
    echo "\cp -f ${path}/${dir}/unwrap_mask_ll.png ${odir}/" | sh
    
    echo "gmt grdconvert ${path}/${dir}/corr_cut.grd ${odir}/corr_cut.grd=cf"
    echo "gmt grdconvert ${path}/${dir}/corr_cut.grd ${odir}/corr_cut.grd=cf" | sh

    echo "gmt grdconvert ${path}/${dir}/unwrap_mask.grd ${odir}/unwrap_mask.grd=cf"
    echo "gmt grdconvert ${path}/${dir}/unwrap_mask.grd ${odir}/unwrap_mask.grd=cf" | sh
    #exit
done
